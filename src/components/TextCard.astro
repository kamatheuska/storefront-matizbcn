---
import { Image } from "astro:assets";
import { type ImageProps } from "../types";

interface Props {
    image: ImageProps;
    text: string;
    link: string;
    title?: string;
    date?: string;
}
const { image, text, link, title, date } = Astro.props;
---

<div>
    <div class="relative pb-[125%]">
        <Image class="card-image" src={image.src} alt={image.alt} inferSize />
    </div>
    <div class="pt-10">
        {title && <h3 class="text-2xl tracking-wider leading-10 font-normal">{title}</h3>}
        <p class="[&:nth-child(2)]:mt-4">
            {date && <strong>{date}</strong>}
            <span>
                {text}
            </span>
        </p>
    </div>
    <a href={link} class="text-2xl mt-6 inline-block cursor-pointer">
        more
        <br />
        <span class="whitespace-nowrap text-4xl">
            <ion-icon name="return-down-forward-outline" aria-label="More Icon"></ion-icon>
        </span>
    </a>
</div>
